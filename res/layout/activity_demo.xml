<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:widget="http://schemas.android.com/apk/res/me.wtao.widget"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DemoActivity" >

    <FrameLayout
        android:id="@+id/drawer_outter_layout"
        android:layout_width="@dimen/sliding_drawer_outter_width"
        android:layout_height="@dimen/sliding_drawer_outter_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/darker_gray" >

        <me.wtao.widget.SlidingDrawer
            android:id="@+id/drawer_right_to_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            widget:collapsedOffset="@dimen/collapsed_offset"
            widget:content="@+id/content"
            widget:handle="@+id/handle"
            widget:orientation="rightToLeft"
            widget:expandedOffset="@dimen/expanded_offset" >

            <RelativeLayout
                android:id="@id/handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="@dimen/handle_width"
                    android:layout_height="@dimen/handle_height"
                    android:layout_margin="@dimen/view_margin"
                    android:background="@drawable/bk_holo_red_light"
                    android:gravity="center"
                    android:text="@string/handle_prompt"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/view_margin"
                    android:background="@drawable/bk_holo_blue_light"
                    android:gravity="center"
                    android:text="@string/content_prompt"
                    android:textColor="@android:color/white" />
            </RelativeLayout>
        </me.wtao.widget.SlidingDrawer>
    </FrameLayout>

    <TextView
        android:layout_width="@dimen/sliding_drawer_outter_width"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/drawer_outter_layout"
        android:layout_below="@id/drawer_outter_layout"
        android:gravity="center"
        android:text="@dimen/sliding_drawer_outter_width" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sliding_drawer_outter_height"
        android:layout_alignTop="@id/drawer_outter_layout"
        android:layout_toLeftOf="@id/drawer_outter_layout"
        android:gravity="center"
        android:text="@dimen/sliding_drawer_outter_height" />

</RelativeLayout>